<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chen.crm.settings.dao.UserDao">

    <sql id="all_column">
        id
        ,loginAct,name,loginPwd,email,expireTime,lockState,deptno,allowIps,createTime,createBy,editTime,editBy
    </sql>

    <select id="login" resultType="com.chen.crm.settings.domain.User">
        select
        <include refid="all_column"/>
        from tbl_user
        where loginAct=#{loginAct} and loginPwd=#{loginPwd}
    </select>

    <select id="getUserList" resultType="com.chen.crm.settings.domain.User">
        select
        <include refid="all_column"/>
        from tbl_user
    </select>

    <update id="updatePwd">
        update tbl_user
        set loginPwd=#{loginPwd}
        where id = #{id}
    </update>
</mapper>